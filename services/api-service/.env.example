# API Service Environment Configuration

# Application Configuration
NODE_ENV=production
PORT=3000
LOG_LEVEL=info

# Service URLs (Kubernetes internal)
AUTH_SERVICE_URL=http://auth-service.backend.svc.cluster.local:8080
REDIS_URL=redis://redis.backend.svc.cluster.local:6379

# Database Configuration (from Kubernetes secrets)
DATABASE_URL=postgresql://user:pass@host:5432/dbname

# Security Configuration (from Kubernetes secrets)
JWT_SECRET=your-jwt-secret-key

# AWS Configuration (from Kubernetes secrets)
AWS_REGION=eu-central-1
S3_BUCKET=your-s3-bucket-name

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
MAX_FILES_PER_UPLOAD=5

# Monitoring
METRICS_ENABLED=true
HEALTH_CHECK_TIMEOUT=5000